<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/searchdialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/searchdialog_fav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchdialog_name"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/searchdialog_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchdialog_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Recipe"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/searchdialog_close"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/searchdialog_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VISIT WEBSITE"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/searchdialog_close"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/searchdialog_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CLOSE DIALOG"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/searchdialog_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/searchdialog_close"
        app:layout_constraintEnd_toStartOf="@+id/searchdialog_remove"
        app:layout_constraintStart_toEndOf="@+id/searchdialog_website" />
</androidx.constraintlayout.widget.ConstraintLayout>